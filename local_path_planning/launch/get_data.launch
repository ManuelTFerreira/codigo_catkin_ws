<?xml version="1.0"?>
<!-- -->
<launch>
  <arg name = "record" default = "false"/>
  <rosparam name="use_sim_time" value="true" />
  <!--Launch the drivers><include file="$(find local_path_planning)/launch/drivers.launch"><arg name="VLP16" value="true" /><arg name="ld_mrs" value="true" /><arg name="lms151_E" value="true" /><arg name="lms151_D" value="true" /><arg name="zebra2" value="true" /></include-->
  <!--Launch the recorder-->
  <node name="rosbag_record" pkg="rosbag" type="record" output="screen" if="$(arg record)" args=" /ld_rms/scan0 /ld_rms/scan1  /ld_rms/scan2 /ld_rms/scan3 /lms151_D_scan /lms151_E_scan  /camera/image_color  /velodyne_points -o $(find local_path_planning)/laserData/"/>
  <!--Launch the visualizer-->
  <node pkg="rviz" type="rviz" name="rviz" args="--display-config $(find local_path_planning)/config/rviz_2.rviz" required="true"/>
  <!--Launch the robot model-->
  <include file="$(find local_path_planning)/launch/robotmodel.launch"/>
  <!--Launch the frame publisher-->
  <node pkg="local_path_planning" type="device_frame_publisher_node" name="device_frame_publisher" required="true"/>
  <param name = "ref_sensor" value="lms151_E" type="string"/>
  <param name = "calibFilesPath" value="$(find local_path_planning)/calibration_data" type="string"/>
</launch>